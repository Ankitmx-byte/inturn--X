{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd client && npm install --legacy-peer-deps && npm run build && cd ../server && npm install --production=false",
  "outputDirectory": "client/dist",
  "installCommand": "echo 'Installing dependencies - v1.0.5'",
  "framework": null,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server"
    },
    {
      "source": "/((?!api|.*\\..*).*)",
      "destination": "/"
    }
  ]
}

